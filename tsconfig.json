{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest"],
  "types": ["typePatches"]
}
